<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo transparente -->
    <solid android:color="@android:color/transparent" />

    <!-- Borde con color blanco y grosor de 2dp -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Esquinas redondeadas -->
    <corners android:radius="32dp" />

    <!-- Espaciado interno -->
    <padding
        android:top="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp" />
</shape>
